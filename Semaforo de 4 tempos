#include<at89x52.h>
#include<delay.h>

void main()
{
    #define TEMPO_1 2000
    #define TEMPO_1 500
    #define VERDE P0_0
    #define AMARELO P0_1
    #define VERMELHO P0_2
    #define VERDE_1 P0_3
    #define AMARELO_1 P0_4
    #define VERMELHO_1 P0_5
    #define VERDE_2 P2_0
    #define AMARELO_2 P2_1
    #define VERMELHO_2 P2_2
    #define VERDE_3 P2_3
    #define AMARELO_3 P2_4
    #define VERMELHO_3 P2_5
    #define ON 0
    #define OFF 1
    while(1)
    {
        //Semaforo 1
        VERDE=ON;
        VERMELHO_1=ON;
        VERMELHO_2=ON;
        VERMELHO_3=ON;
        delay_ms(TEMPO_1);
        AMARELO=ON;
        delay_ms(TEMPO_2);
        
        //Semaforo2
        VERDE=OFF;
        AMARELO=OFF;
        VERMELHO=ON;
        VERMELHO_1=OFF;
        VERDE_1=ON;
        delay_ms(TEMPO_1);
        AMARELO_1=ON;
        delay_ms(TEMPO_2);
        
        //Semaforo 3
        VERDE_1=OFF;
        AMARELO_1=OFF;
        VERMELHO_1=ON;
        VERMELHO_2=OFF;
        VERDE_2=ON;
        delay_ms(TEMPO_1);
        AMARELO_2=ON;
        delay_ms(TEMPO_2);
        
        //Semaforo 4
        VERDE_2=OFF;
        AMARELO_2=OFF;
        VERMELHO_2=ON;
        VERMELHO_3=OFF;
        VERDE_3=ON;
        delay_ms(TEMPO_1);
        AMARELO_3=ON;
        delay_ms(TEMPO_2);
        VERMELHO_2=OFF;
        VERDE_3=OFF;
        AMARELO_3=OFF;
    }
}
